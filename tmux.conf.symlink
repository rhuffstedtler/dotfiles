# Improve key bindings
unbind C-b
set -g prefix C-a

#start window numbers at 1 to match keyboard order
set -g base-index 1
set-window-option -g pane-base-index 1

#Make status bar more aesthetically pleasing
set -g status-bg '#666666'
set -g status-fg '#aaaaaa'

# window splitting
unbind %
bind | split-window -h
unbind '"'
bind - split-window -v
